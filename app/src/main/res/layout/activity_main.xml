<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/periodo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Peridodo Academico"/>
    <EditText
        android:id="@+id/escuela"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Escuela Profesional"/>
    <EditText
        android:id="@+id/codigo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Codigo de la asignatura"/>
    <EditText
        android:id="@+id/nombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la asignatura"/>
    <EditText
        android:id="@+id/semestre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Semestre"/>

    <EditText
        android:id="@+id/duracion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Duracion"/>

    <Button
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:longClickable="true"
        android:text="Registrar" />

</LinearLayout>